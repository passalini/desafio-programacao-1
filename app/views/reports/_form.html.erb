<div class="container">
  <%= form_with(model: report, local: true) do |form| %>
    <% if report.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

        <ul>
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <% if action_name == 'new' %>
      <div class="field">
        <%= form.label :file %>
        <%= form.file_field :file, class: 'form-control-file' %>
      </div>
    <% end %>

    <div class="actions">
      <%= form.submit(class: 'btn btn-lg btn-primary btn-block') %>
    </div>
  <% end %>
</div>
