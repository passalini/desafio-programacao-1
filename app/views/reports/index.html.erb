<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <% if @reports.present? %>
    <h1 class="display-4">Income</h1>
    <p class="lead">
      <span id="total-income"><%= number_to_currency @total_income %><span>
    </p>
  <% else %>
    <h1 class="display-4">You still don't have reports!</h1>
  <% end %>

  <%= link_to 'New Report', new_report_path, class: 'btn btn-primary my-2' %>
</div>

<div class="container">
  <% if @reports.present? %>
    <div id="reports"  class="card-deck mb-3 text-center">
      <% @reports.each do |report| %>
        <div id="report-<%= report.id %>" class="report card mb-4 shadow-sm">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal"><%= report.name %></h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title income"><%= number_to_currency(report.income) %></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li><%= link_to 'Download', url_for(report.file) %></li>
              <li><%= link_to 'Edit', edit_report_path(report) %></li>
              <li><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
            <%= link_to 'Show', report_path(report), class: "btn btn-lg btn-block btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="row">
      <div class="col-12 col-md">
        <img class="mb-2" src="https://getbootstrap.com/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
        <small class="d-block mb-3 text-muted">Â© 2017-2019</small>
      </div>
    </div>
  </footer>
</div>
