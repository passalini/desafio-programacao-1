<p id="notice"><%= notice %></p>

<h1>
  Reports
  <% if @reports.present? %> # total gross income: <span id="total-income"><%= number_to_currency @total_income %><span><% end %>
</h1>

<% if @reports.present? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Income</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="reports">
      <% @reports.each do |report| %>
        <tr id="report-<%= report.id %>" class="report">
          <td><%= report.name %></td>
          <td class="income"><%= number_to_currency(report.income) %></td>
          <td><%= link_to 'Download', url_for(report.file) %></td>
          <td><%= link_to 'Edit', edit_report_path(report) %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <span>You still don't have reports!</span>
<% end %>
<br>

<%= link_to 'New Report', new_report_path %>
