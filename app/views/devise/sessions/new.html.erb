<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <a class="btn btn-lg btn-social btn-facebook btn-block" href="<%= omniauth_authorize_path(resource_name, provider) %>">
        <i class="fa fa-facebook fa-fw"></i> Sign in with Facebook
      </a>
    <% end -%>

    <h1 class="h3 mb-3 font-weight-normal">OR</h1>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions checkbox mb-3">
      <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
